{
  "name": "@iac/ui",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/styles --watch",
    "dev": "tsup --watch",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/styles",
    "build": "tsup"
  },
  "exports": {
    "./styles": "./dist/styles",
    "./button": {
      "types": "./dist/button.d.ts",
      "import": "./dist/button.js",
      "require": "./dist/button.cjs"
    }
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "clsx": "^2.1.1",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@iac/typescript-config": "workspace:*",
    "@iac/tailwind-config": "workspace:*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
